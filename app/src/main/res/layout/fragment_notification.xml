<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/screenBackground"
    android:layout_marginBottom="90dp"
    tools:context=".NotificationFragment">

<!--heading-->
    <TextView
        android:id="@+id/notification_heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        style="@style/primary_text"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />
<!--sub heading-->
    <TextView
        android:layout_below="@+id/notification_heading_text"
        android:id="@+id/resent_notification_subHeading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resent_notification"
        style="@style/secondary_text"
        android:textStyle="normal"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        />
<!--notification-->
    <RelativeLayout
        android:layout_below="@+id/resent_notification_subHeading_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/input_background">

        <!-- medication name-->
        <LinearLayout
            android:id="@+id/medication_name_area_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medication Name: "
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/medication_name_text_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acetaertion"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textColor="@color/lite_text_color"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
        <!-- dosage-->
        <LinearLayout
            android:layout_below="@+id/medication_name_area_notification"
            android:id="@+id/medication_dosage_area_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosage: "
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/medication_dosage_text_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textColor="@color/lite_text_color"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
        <!-- time and date-->
        <LinearLayout
            android:id="@+id/medication_time_date_area_notification"
            android:layout_below="@+id/medication_dosage_area_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <!-- time-->
            <LinearLayout
                android:id="@+id/medication_time_area_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/medication_time_text_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.00.a.m"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/lite_text_color"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>
            <!-- date-->
            <LinearLayout
                android:id="@+id/medication_date_area_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/medication_date_text_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.00.a.m"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/lite_text_color"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>